@model TrainingApplication.Models.TrainingViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Training</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Exercise Name
        </dt>
        <dd class="col-sm-10">
            @Model.ExerciseName
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.Date
        </dd>
        <dt class="col-sm-2">
            Distance/Weight
        </dt>
        <dd class="col-sm-10">
            @Model.DistanceOrWeight
        </dd>
        <dt class="col-sm-2">
            Units
        </dt>
        <dd class="col-sm-10">
            @Model.Units
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
